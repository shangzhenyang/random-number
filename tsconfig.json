{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"baseUrl": ".",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"useDefineForClassFields": true,
		"jsx": "preserve",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["node"]
	},
	"include": ["src", "*.ts"]
}
